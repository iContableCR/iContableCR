<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_only_form_view_timbre" model="ir.ui.view">
        <field name="name">product.template.view.form.timbre</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_policy']" position="before">
                <field name="exent_product" />
                <field name="percentage_value" attrs="{'invisible':[('exent_product','=',False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
