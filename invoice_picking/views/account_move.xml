<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_invoice_picking" model="ir.ui.view">
        <field name="name">account.move.view.form.invoice_picking</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_picking" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('picking_count', '=', 0)]}" >
                    <field name="picking_count" widget="statinfo" string="Entregas"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
